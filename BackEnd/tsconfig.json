{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",                 // ğŸ‘ˆ this removes â€œCannot use JSX unless the --jsx flag is providedâ€
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["vite/client", "react", "react-dom", "node" ]
  },


  "include": ["src", "vite-env.d.ts", "BackEnd/middleware", "BackEnd/index.ts", "BackEnd/routes"]
}
